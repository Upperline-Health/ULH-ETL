{
	"name": "PL_Ingest_To_Raw",
	"properties": {
		"activities": [
			{
				"name": "Read_Config",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"dataset": {
						"referenceName": "DS_Config_Practices",
						"type": "DatasetReference"
					}
				}
			},
			{
				"name": "Per_Payer",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "Read_Config",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('Read_Config').output.firstRow.Practices",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "ADLS_List",
							"type": "GetMetadata",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"dataset": {
									"referenceName": "DS_SFTP_ADLS_Delimited_Dynamic",
									"type": "DatasetReference",
									"parameters": {
										"container": "@item().connection.adls.container",
										"directory": "@item().connection.adls.directory"
									}
								},
								"fieldList": [
									"exists"
								],
								"storeSettings": {
									"type": "AzureBlobFSReadSettings",
									"enablePartitionDiscovery": false
								},
								"formatSettings": {
									"type": "DelimitedTextReadSettings"
								}
							}
						},
						{
							"name": "Filter_ADLS_Files",
							"type": "Filter",
							"dependsOn": [
								{
									"activity": "Set_FilePattern",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"items": {
									"value": "@activity('ADLS_List').output.childItems",
									"type": "Expression"
								},
								"condition": {
									"value": "@and(\n  or(equals(item().type,'File'), equals(item().type,'file')),\n  or(\n    equals(variables('vFilePattern'), '*'),\n    endswith(item().name, replace(variables('vFilePattern'), '*', ''))\n  )\n)\n",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Set_FilePattern",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "ADLS_List",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"variableName": "vFilePattern",
								"value": {
									"value": "@coalesce(item().connection.adls.file_pattern, '*')",
									"type": "Expression"
								}
							}
						}
					]
				}
			}
		],
		"variables": {
			"vFilePattern": {
				"type": "String"
			}
		},
		"folder": {
			"name": "ingest"
		},
		"annotations": []
	}
}