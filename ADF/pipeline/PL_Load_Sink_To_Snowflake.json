{
	"name": "PL_Load_Sink_To_Snowflake",
	"properties": {
		"activities": [
			{
				"name": "Copy_SinkADLS_to_Snowflake",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"wildcardFolderPath": {
								"value": "@pipeline().parameters.p_sink_directory",
								"type": "Expression"
							},
							"wildcardFileName": {
								"value": "@coalesce(pipeline().parameters.p_file_pattern,'*')",
								"type": "Expression"
							}
						},
						"formatSettings": {
							"type": "BinaryReadSettings"
						}
					},
					"sink": {
						"type": "SnowflakeSink",
						"writeBatchSize": 0,
						"preCopyScript": {
							"value": "@concat('USE ROLE ', pipeline().parameters.p_sf_role, '; USE WAREHOUSE ', pipeline().parameters.p_sf_warehouse, '; USE DATABASE ', pipeline().parameters.p_sf_database, '; USE SCHEMA ', pipeline().parameters.p_sf_schema, ';')",
							"type": "Expression"
						},
						"importSettings": {
							"type": "SnowflakeImportCopyCommand"
						},
						"snowflakeCopyOptions": {
							"additionalCopyOptions": {
								"type": "Expression",
								"value": "@concat('ON_ERROR=', pipeline().parameters.p_copy_on_error, '; TRUNCATECOLUMNS=', pipeline().parameters.p_copy_truncate_columns, '; FORCE=', pipeline().parameters.p_copy_force, '; PURGE=', pipeline().parameters.p_copy_purge)"
							},
							"additionalFormatOptions": {
								"type": "Expression",
								"value": "@concat('TYPE=CSV; FIELD_DELIMITER=', pipeline().parameters.p_ff_delimiter, '; SKIP_HEADER=', if(equals(pipeline().parameters.p_ff_first_row_header, 'true'), '1', '0'), '; FIELD_OPTIONALLY_ENCLOSED_BY=\\'', pipeline().parameters.p_ff_quote, '\\'; NULL_IF=', pipeline().parameters.p_ff_null_if)"
							}
						}
					},
					"enableStaging": true,
					"stagingSettings": {
						"linkedServiceName": {
							"referenceName": "LS_SINK_ADLS",
							"type": "LinkedServiceReference"
						},
						"path": {
							"value": "@concat(pipeline().parameters.p_sink_directory, '/_stage/', pipeline().RunId)",
							"type": "Expression"
						}
					}
				},
				"inputs": [
					{
						"referenceName": "DS_ADLS_Binary_ForLoad",
						"type": "DatasetReference",
						"parameters": {
							"container": {
								"value": "@pipeline().parameters.p_sink_container",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "DS_Snowflake_Table_Dynamic",
						"type": "DatasetReference",
						"parameters": {
							"database": {
								"value": "@pipeline().parameters.p_sf_database",
								"type": "Expression"
							},
							"schema": {
								"value": "@pipeline().parameters.p_sf_schema",
								"type": "Expression"
							},
							"table": {
								"value": "@pipeline().parameters.p_sf_table",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"p_practice_name": {
				"type": "String"
			},
			"p_sink_container": {
				"type": "String"
			},
			"p_sink_directory": {
				"type": "String"
			},
			"p_file_pattern": {
				"type": "String",
				"defaultValue": "*"
			},
			"p_sf_database": {
				"type": "String"
			},
			"p_sf_schema": {
				"type": "String"
			},
			"p_sf_table": {
				"type": "String"
			},
			"p_sf_warehouse": {
				"type": "String",
				"defaultValue": "ENGINEERING_WH"
			},
			"p_sf_role": {
				"type": "String",
				"defaultValue": "SYSADMIN"
			},
			"p_ff_first_row_header": {
				"type": "String",
				"defaultValue": "true"
			},
			"p_ff_delimiter": {
				"type": "String",
				"defaultValue": ","
			},
			"p_ff_quote": {
				"type": "String",
				"defaultValue": "\""
			},
			"p_ff_null_if": {
				"type": "String",
				"defaultValue": "['','NULL']"
			},
			"p_copy_on_error": {
				"type": "String",
				"defaultValue": "CONTINUE"
			},
			"p_copy_truncate_columns": {
				"type": "String",
				"defaultValue": "false"
			},
			"p_copy_force": {
				"type": "String",
				"defaultValue": "false"
			},
			"p_copy_purge": {
				"type": "String",
				"defaultValue": "false"
			}
		},
		"annotations": []
	}
}